<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/social_networks_card_view"
    style="@style/CardTeam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_4dp">

    <LinearLayout
        android:id="@+id/contentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <TextView
            android:id="@+id/name"
            style="@style/TextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Barcelona" />

        <LinearLayout
            android:id="@+id/website_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/website_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:src="@drawable/ic_website_24"
                app:tint="@color/colorPrimary"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/website_text_view"
                style="@style/TextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="www.google.com" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facebook_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/facebook_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:src="@drawable/ic_facebook_24"
                app:tint="@color/colorPrimary"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/facebook_text_view"
                style="@style/TextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facebook" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/instagram_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/instagram_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:src="@drawable/ic_instagram_24"
                app:tint="@color/colorAccent"
                android:contentDescription="TODO"  />

            <TextView
                android:id="@+id/instagram_text_view"
                style="@style/TextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/instagram" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/twitter_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/twitter_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:src="@drawable/ic_twitter_24"
                app:tint="@color/colorPrimary"
                android:contentDescription="TODO"  />

            <TextView
                android:id="@+id/twitter_text_view"
                style="@style/TextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/twitter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/youtobe_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/youtobe_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:src="@drawable/ic_youtube_24"
                app:tint="@color/red_FF0000"
                android:contentDescription="TODO"  />

            <TextView
                android:id="@+id/youtobe_text_view"
                style="@style/TextViewBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/youtobe" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>